[connection signal="text_changed" from="MarginContainer/VBoxContainer/GridContainer/ApiKeyContainer/APIKeyTxt" to="." method="_on_settings_changed"]
[connection signal="item_selected" from="MarginContainer/VBoxContainer/MCPContainer/MCPList" to="." method="_on_mcp_list_item_selected"]
